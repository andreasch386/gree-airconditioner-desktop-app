<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" style="-fx-border-color: lightgray; -fx-padding: 10;" xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gree.controller.AcUnitController">
    <HBox prefHeight="0.0" prefWidth="346.0">
        <children>
            <Label fx:id="unitName" text="Label"/>
            <Button fx:id="renameButton" mnemonicParsing="false" onMouseClicked="#onRenameButtonClicked" text="Rename"/>
        </children>
    </HBox>

    <HBox spacing="10">
        <Label fx:id="tempLabel" text="Temp"/>
        <Button fx:id="decreaseTempButton" text="-"/>
        <Button fx:id="increaseTempButton" text="+"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Health"/>
        <CheckBox fx:id="healthMode"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Mode:"/>
        <RadioButton fx:id="modeAuto" text="Auto"/>
        <RadioButton fx:id="modeCool" text="Cool"/>
        <RadioButton fx:id="modeHeat" text="Heat"/>
        <RadioButton fx:id="modeDry" text="Dry"/>
        <RadioButton fx:id="modeFanOnly" text="Fan Only"/>
    </HBox>
    <HBox spacing="10">
        <children>
            <Label text="Fan"/>
            <RadioButton fx:id="fanAuto" text="Auto"/>
            <RadioButton fx:id="fanLow" text="1"/>
            <RadioButton fx:id="fanMediumLow" text="2"/>
            <RadioButton fx:id="fanMedium" text="3"/>
            <RadioButton fx:id="fanMediumHigh" text="4"/>
            <RadioButton fx:id="fanHigh" text="5"/>
        </children>
    </HBox>

    <Button fx:id="powerButton" text="On/Off"/>
</VBox>
