<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" style="-fx-border-color: lightgray; -fx-padding: 10;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gree.controller.AcUnitController">
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label fx:id="title" text="Label" />
      </children>
   </HBox>

    <HBox spacing="10">
        <Label fx:id="actionLabel" text="Group - Action:" />
        <Button fx:id="startButton" text="Start" />
        <Button fx:id="stopButton" text="Stop" />
    </HBox>

    <HBox spacing="10">
        <Label text="Enable Feature A:" />
        <CheckBox fx:id="featureA" />
    </HBox>

    <HBox spacing="10">
        <Label text="Enable Feature B:" />
        <CheckBox fx:id="featureB" />
    </HBox>

    <HBox spacing="10">
        <Label text="Mode:" />
        <RadioButton fx:id="option1" text="Option 1" />
        <RadioButton fx:id="option2" text="Option 2" />
        <RadioButton fx:id="option3" text="Option 3" />
        <RadioButton fx:id="option4" text="Option 4" />
    </HBox>

    <Button fx:id="applyButton" text="Apply" />
</VBox>
